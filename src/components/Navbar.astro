---
import Logo from '../../public/images/logomultip.png'

const {pathname} = Astro.url
---


<nav class="bg-white px-2 sm:px-4 py-2.5 shadow-sm border-b-4 border-blue-800">

    <div class="container flex flex-wrap items-center justify-between mx-auto">

      <a href="/" class="flex items-center">
          <img src={Logo} alt="20 anos Logo" width="130" />
          <img src="/files/mplogo.png" alt="Multipolimeros logo" width="280" class="hidden md:flex">
      </a>

      <button id="button" data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 ml-3 text-sm text-orange-500 rounded-lg md:hidden hover:bg-orange-100 focus:outline-none focus:ring-2 focus:ring-orange-200" aria-controls="navbar-default" aria-expanded="false">
        <span class="sr-only">Abrir menu</span>
        <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
      </button>

      <div class="hidden w-full md:block md:w-auto" id="menu">
        <ul class="flex flex-col p-4 mt-4 md:flex-row md:space-x-8 md:mt-0 md:text-lg md:font-medium">
          <li>
            <a href="/" class={
                `${pathname === '/' ? 'text-blue-800' : 'text-gray-500'}
                block py-2 pl-3 pr-4 md:p-0 hover:text-blue-800 duration-300`
            }>Inicio</a>
          </li>
          <li>
            <a href="/nuestra-empresa" class={
              `${pathname === '/nuestra-empresa' ? 'text-blue-800' : 'text-gray-500'}
              block py-2 pl-3 pr-4 md:p-0 hover:text-blue-800 duration-300`
          }>Nuestra empresa</a>
          </li>
          <li>
            <a href="/productos" class={
              `${pathname === '/productos' ? 'text-blue-800' : 'text-gray-500'}
              block py-2 pl-3 pr-4 md:p-0 hover:text-blue-800 duration-300`
          }>Productos</a>
          </li>
          <li>
            <a href="/servicios" class={
              `${pathname === '/servicios' ? 'text-blue-800' : 'text-gray-500'}
              block py-2 pl-3 pr-4 md:p-0 hover:text-blue-800 duration-300`
          }>Servicios</a>
          </li>
          <li>
            <a href="/contacto" class={
              `${pathname === '/contacto' ? 'text-blue-800' : 'text-gray-500'}
              block py-2 pl-3 pr-4 md:p-0 hover:text-blue-800 duration-300`
          }>Contacto</a>
          </li>
        </ul>
      </div>

    </div>

</nav>

<script>
    const button = document.querySelector('#button')
    const menu = document.querySelector('#menu')

    button.addEventListener('click', () => {
        menu.classList.toggle('hidden')
    })
</script>
  